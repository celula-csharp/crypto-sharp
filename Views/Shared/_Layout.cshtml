@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SeguimientoCriptomonedas</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SeguimientoCriptomonedas.styles.css" asp-append-version="true" />
    <script src="https://cdn.jsdelivr.net/npm/@@tailwindcss/browser@4"></script>
    <link href="https://cdn.jsdelivr.net/npm/modern-normalize@latest/modern-normalize.min.css" rel="stylesheet">
    <script src="https://unpkg.com/lucide@latest"></script>
</head>
<body class="bg-light">

    @{
        var loggedUser = HttpContextAccessor.HttpContext.Session.GetString("LoggedUser");
    }

    <header>
        <nav class="bg-gray-50 text-white sticky top-0 z-50">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <div class="flex justify-between items-center h-16">
                    <div class="flex items-center space-x-2">
                        <a href="~/" class="!no-underline text-dark text-2xl font-bold">
                            Crypto#
                        </a>
                    </div>

                    <div class="md:hidden">
                        <button id="menu-toggle" class="text-black focus:outline-none focus:ring-2 focus:ring-blue-500 rounded-md">
                            <svg class="w-6 h-6" fill="none" stroke="currentColor" stroke-width="2"
                                 viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round"
                                      d="M4 6h16M4 12h16M4 18h16" />
                            </svg>
                        </button>
                    </div>

                    <div class="hidden md:flex space-x-2 font-medium">
                        <a href="~/" class="px-2 py-1 rounded-md !no-underline text-black hover:bg-gray-200 transition-colors">Inicio</a>
                        <a href="~/Dashboard" class="px-2 py-1 rounded-md !no-underline text-black hover:bg-gray-200 transition-colors">Dashboard</a>
                    </div>

                    <div class="hidden md:flex items-center space-x-4">
                        @if (loggedUser != null)
                        {
                            <div class="flex items-center space-x-3">
                                <span class="text-sm text-gray-700">Hola, @loggedUser</span>
                                <form asp-controller="Account" asp-action="Logout" method="post">
                                    <button type="submit"
                                            class="border !border-red-600 text-red-600 hover:bg-red-600 hover:text-white px-4 py-2 !rounded-lg text-sm font-medium transition-colors">
                                        Cerrar sesión
                                    </button>
                                </form>
                            </div>
                        }
                        else
                        {
                            <a href="~/Account/Register"
                               class="border !no-underline border-blue-600 hover:bg-gray-200 hover:!text-black px-4 py-2 rounded-lg text-sm font-medium transition-colors">
                                Registrarse
                            </a>
                            <a href="~/Account/Login"
                               class="bg-black text-white !no-underline hover:bg-blue-700 px-4 py-2 rounded-lg text-sm font-medium transition-colors">
                                Iniciar sesión
                            </a>
                        }
                    </div>
                </div>
            </div>

            <div id="mobile-menu" class="md:hidden hidden border-t border-gray-800 bg-white border-b">
                <div class="px-4 py-3 space-y-3">
                    <a href="~/" class="block px-2 py-1 rounded-md !no-underline text-black hover:bg-gray-100 transition-colors">Inicio</a>
                    <a href="~/Dashboard" class="block px-2 py-1 rounded-md !no-underline text-black hover:bg-gray-100 transition-colors">Dashboard</a>
                    <a href="~/Market" class="block px-2 py-1 rounded-md !no-underline text-black hover:bg-gray-100 transition-colors">Mercado</a>

                    @if (TempData["LoggedUser"] != null)
                    {
                        <div class="pt-3 border-t border-gray-800">
                            <span class="block text-sm text-gray-400 mb-2">Hola, @TempData["LoggedUser"]</span>
                            <form asp-controller="Account" asp-action="Logout" method="post">
                                <button type="submit"
                                        class="w-full bg-red-600 hover:bg-red-700 px-4 py-2 rounded-lg text-sm font-medium transition-colors">
                                    Cerrar sesión
                                </button>
                            </form>
                        </div>
                    }
                    else
                    {
                        <div class="pt-3 border-t border-gray-800 flex flex-col gap-2">
                            <a href="~/Account/Login"
                               class="bg-black text-center text-white !no-underline hover:bg-blue-700 px-4 py-2 rounded-lg text-sm font-medium transition-colors">
                                Iniciar sesión
                            </a>
                            <a href="~/Account/Register"
                               class="border text-center !no-underline border-blue-600 hover:bg-gray-200 hover:!text-black px-4 py-2 rounded-lg text-sm font-medium transition-colors">
                                Registrarse
                            </a>
                        </div>
                    }
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-4 min-h-screen">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top text-muted mt-10 py-3 bg-dark text-center text-white-50">
        <div class="container">
            &copy; 2025 - SeguimientoCriptomonedas -
            <a class="text-white-50" asp-controller="Home" asp-action="Privacy">Privacidad</a>
        </div>
    </footer>

    
    <script>
            const menuToggle = document.getElementById("menu-toggle");
            const mobileMenu = document.getElementById("mobile-menu");
        
            menuToggle.addEventListener("click", () => {
                mobileMenu.classList.toggle("hidden");
                mobileMenu.classList.toggle("animate-slide-down");
            });
        </script>

    <style>
        @@keyframes slide-down {
            from { opacity: 0; transform: translateY(-10px); }
            to { opacity: 1; transform: translateY(0); }
        }
        .animate-slide-down {
            animation: slide-down 0.2s ease-out;
        }
    </style>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
