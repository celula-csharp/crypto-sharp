@model List<SeguimientoCriptomonedas.Models.Coin>

<h2>Top 10 Criptomonedas</h2>

@if (Model.Any())
{
    <table class="table">
        <thead>
        <tr>
            <th>Nombre</th>
            <th>Símbolo</th>
            <th>Precio (USD)</th>
            <th>Cambio 24h (%)</th>
            <th>Ranking</th>
        </tr>
        </thead>
        <tbody>
        @foreach(var coin in Model)
        {
            <tr>
                <td>@coin.Name</td>
                <td>@coin.Symbol.ToUpper()</td>
                <td>@coin.CurrentPrice?.ToString("F2")</td>
                <td>@coin.PriceChange24h?.ToString("F2")</td>
                <td>@coin.MarketCapRank</td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <p>No se encontraron monedas para mostrar.</p>
}